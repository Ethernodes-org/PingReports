{
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/amilabs/devkit"
        },
        {
            "type": "vcs",
            "url": "https://github.com/Deepelopment/Net"
        }
    ],

    "require": {
        "php":              ">=5.3.0",
        "amilabs/devkit":   "dev-develop",
        "Deepelopment/Net": "dev-develop"
    },

    "autoload": {
        "psr-0": {
            "AmiLabs\\PingReports": "app/classes"
        }
    },

    "minimum-stability": "dev",
    "prefer-stable":     true,

    "scripts": {
        "post-update-cmd":  "AmiLabs\\PingReports\\Composer::postUpdate",
        "post-install-cmd": "AmiLabs\\PingReports\\Composer::postInstall"
    }
}
